{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}