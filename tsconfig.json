{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "ES2018",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noEmitHelpers": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2015"]
  },
  "include": [
    "./src/**/*.ts",
    "./types/"
  ],
  "exclude": ["node_modules", "dist"]
}